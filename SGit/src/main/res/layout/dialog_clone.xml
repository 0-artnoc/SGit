<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/general_padding"
              android:dividerPadding="@dimen/general_divider_padding">


    <EditText
            android:id="@+id/remoteURL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/general_label_size"
            android:hint="@string/label_remote_url"/>


    <EditText
            android:id="@+id/localPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/general_label_size"
            android:hint="@string/label_local_path"/>
</LinearLayout>